- var tw = 500; // triangle width
- var tx = 0;     // x offset
- var th = tw * 2 / Math.sqrt(3);
- var ty = 0;
- var tf = "#dropshadow-";

mixin triangle(dir, c, size) 
    - var f = "url(#triangle-dropshadow)";

    svg(class=c viewBox=`0 0 ${tw} ${th}`)

        if dir == 'left'
            path(filter=`url(${tf}${size || 'large'})` d=`M${tw - tx},${ty} L${tw - tx},${th - ty} L${tx},${th / 2} Z`)

        else if dir == 'right'
            path(filter=`url(${tf}${size || 'large'})` d=`M${tx},${ty} L${tw - tx},${th / 2} L${tx},${th - ty} Z`)

mixin trianglehalf(dir, c, size)
    - var w = tw;
    - var h = th / 2;
    - var x = tx;
    - var y = ty / 2;

    if dir == 'left'
        svg(class=c viewBox=`0 0 ${w} ${h}`)
            path(filter=`url(${tf}${size || 'large'})` d=`M${w - x},${y} L${w - x},${h - y} L${x},${h - y} Z`)

    else if dir == 'right'
        svg(class=c viewBox=`0 0 ${w} ${h}`)
            path(filter=`url(${tf}${size || 'large'})` d=`M${x},${y} L${w - x},${h - y} L${x},${h - y} Z`)

    else if dir == 'down'
        svg(class=c viewBox=`0 0 ${w} ${h/2}`)
            path(filter=`url(${tf}${size || 'large'})` d=`M${x},${y} L${w - x},${y} L${w / 2},${(h - y) / 2} Z`)


mixin defs() 
    svg(class="defs" xmlns="http://www.w3.org/2000/svg")
        defs
            filter#dropshadow-small(height="150%")
                feGaussianBlur(in="SourceAlpha" stdDeviation="25")
                feMerge 
                    feMergeNode
                    feMergeNode(in="SourceGraphic")

            filter#dropshadow-medium(height="150%")
                feGaussianBlur(in="SourceAlpha" stdDeviation="15")
                feMerge 
                    feMergeNode
                    feMergeNode(in="SourceGraphic")

            filter#dropshadow-large(height="150%")
                feGaussianBlur(in="SourceAlpha" stdDeviation="5")
                feMerge 
                    feMergeNode
                    feMergeNode(in="SourceGraphic")

            linearGradient#grad-2(x1="0%" y1="0%" x2="0%" y2="100%")
                stop(stop-color="#7c2db9" stop-opacity="1" offset="0%")
                stop(stop-color="#6e448e" stop-opacity="1" offset="100%")

            clipPath#image-slider-clip(clipPathUnits="objectBoundingBox")
                polygon

            clipPath#map-clip(clipPathUnits="objectBoundingBox")
                polygon

